<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:orientation="vertical">
            <LinearLayout
                android:background="@drawable/table_row_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/book_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/no_book_image" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/book_isbn_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="ISBN"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/book_name_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="书名"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/book_author_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="作者"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RatingBar
                            android:id="@+id/book_score_bar"
                            style="@style/Base.Widget.AppCompat.RatingBar.Small"
                            android:isIndicator="true"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:rating="5"
                            android:numStars="5"
                            android:stepSize="0.1" />
                        <TextView
                            android:id="@+id/book_score_number_view"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="人评分"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/table_row_border"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="简         介:"/>
                <TextView
                    android:id="@+id/book_summary"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/table_row_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textSize="16sp"
                    android:text="总  数  量:"
                    android:padding="5dp" />
                <TextView
                    android:id="@+id/book_total_number_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textSize="16sp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:padding="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:text="不可借数量:"/>
                <TextView
                    android:id="@+id/book_remain_number_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textSize="16sp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:padding="5dp" />
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:stretchColumns="1">
                <TableRow android:background="@drawable/table_row_border">
                    <TextView
                        android:gravity="start"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:text="价        格:"/>
                    <TextView
                        android:id="@+id/book_price_view"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:text=""/>
                </TableRow>
                <TableRow android:background="@drawable/table_row_border">
                    <TextView
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:text="出  版  社:"/>
                    <TextView
                        android:id="@+id/book_publish_company_view"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text=""/>
                </TableRow>
                <TableRow android:background="@drawable/table_row_border">
                    <TextView
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:text="出版时间:"/>
                    <TextView
                        android:id="@+id/book_publish_time_view"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp" />
                </TableRow>
                <TableRow android:background="@drawable/table_row_border">
                    <TextView
                        android:textSize="16sp"
                        android:text="存放位置:"
                        android:padding="5dp" />
                    <TextView
                        android:id="@+id/book_position_view"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text=""/>
                </TableRow>
                <TableRow android:background="@drawable/table_row_border">
                    <TextView
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:text="关  键  字:"/>
                    <TextView
                        android:id="@+id/book_key_words_view"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp" />
                </TableRow>
                <TableRow android:background="@drawable/table_row_border">
                    <TextView
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:text="备        注:"/>
                    <TextView
                        android:id="@+id/book_notes_view"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>